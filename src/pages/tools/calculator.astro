---
import Layout from '../../layouts/Layout.astro';
import EmployeeCalculator from '../../components/calculator/EmployeeCalculator.astro';
import FreelancerCalculator from '../../components/calculator/FreelancerCalculator.astro';
import BusinessCalculator from '../../components/calculator/BusinessCalculator.astro';

const title = "Philippine Tax & Salary Calculator 2025";
const description = "Calculate your net pay, income tax, and government contributions (SSS, PhilHealth, Pag-IBIG) with our updated 2025 calculator.";
---

<Layout title={title} description={description}>
  <div class="container calculator-page">
    <div class="header">
      <h1>{title}</h1>
      <p>{description}</p>
    </div>

    <div class="tabs">
      <button class="tab-btn active" data-target="employee-calculator">Employee</button>
      <button class="tab-btn" data-target="freelancer-calculator">Freelancer / Self-Employed</button>
      <button class="tab-btn" data-target="business-calculator">Small Business</button>
    </div>

    <div class="calculator-wrapper">
      <EmployeeCalculator />
      <FreelancerCalculator />
      <BusinessCalculator />
    </div>
    
    <div class="disclaimer">
      <p><strong>Disclaimer:</strong> This tool is for estimation purposes only. It uses the latest available tax rates and contribution tables for 2025 (TRAIN Law, SSS, PhilHealth, Pag-IBIG). Actual deductions may vary based on your employer's specific payroll policies.</p>
    </div>
  </div>
</Layout>

<style>
  .calculator-page {
    padding-top: var(--space-lg);
    padding-bottom: var(--space-xl);
  }

  .header {
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-sm);
    color: var(--color-text-main);
    font-weight: 800;
  }

  .header p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 60ch;
    margin: 0 auto;
  }

  .tabs {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    flex-wrap: wrap;
  }

  .tab-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    padding: 0.75rem 1.5rem;
    border-radius: 99px;
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.95rem;
  }

  .tab-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background: var(--color-surface-hover);
  }

  .tab-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    box-shadow: var(--shadow-md);
  }

  .calculator-wrapper {
    margin-bottom: var(--space-xl);
  }

  .disclaimer {
    text-align: center;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    padding: var(--space-md);
    background: var(--color-surface);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
  }

  .disclaimer p {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }
</style>

<script>
  const tabs = document.querySelectorAll('.tab-btn');
  const modules = document.querySelectorAll('.calculator-module');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Remove active class from all tabs
      tabs.forEach(t => t.classList.remove('active'));
      // Add active class to clicked tab
      tab.classList.add('active');

      // Hide all modules
      modules.forEach(m => m.classList.add('hidden'));
      
      // Show target module
      const targetId = tab.getAttribute('data-target');
      if (targetId) {
        document.getElementById(targetId)?.classList.remove('hidden');
      }
    });
  });
</script>
