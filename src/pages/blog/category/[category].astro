---
import Layout from '../../../layouts/Layout.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import SanityImage from '../../../components/SanityImage.astro';
import { getPostsByCategory } from '../../../lib/sanity/api';
import {
	CATEGORY_LABELS,
	formatCategoryLabel,
	isBlogCategory,
	type BlogCategory,
} from '../../../lib/sanity/categories';

export const prerender = false;

const categoryParam = Astro.params.category ?? '';
const isValidCategory = isBlogCategory(categoryParam);
const category = isValidCategory ? (categoryParam as BlogCategory) : null;

if (!category) {
	Astro.response.status = 404;
}

const posts = category ? await getPostsByCategory(category) : [];
const title = category ? CATEGORY_LABELS[category] : 'Category';
---

<Layout title={`${title} | MoneyJuan`} description={`Articles about ${title}`}>
	<div class="container page-content">
		<h1 class="page-title">{title}</h1>
		
		{posts.length === 0 ? (
			<p class="no-posts">No articles in this category yet. Check back soon!</p>
		) : (
			<div class="grid posts-grid">
				{
					posts.map((post) => (
						<a href={`/blog/${post.id}/`} class="card post-card">
							<div class="image-container">
								{post.heroImage && <SanityImage source={post.heroImage} width={720} height={360} alt={post.title} />}
							</div>
							<div class="post-content">
								<div class="category-small">{formatCategoryLabel(post.category)}</div>
								<h2 class="title">{post.title}</h2>
								<div class="meta-small">
									<span class="author-small">By {post.author?.name || 'MoneyJuan Team'}</span>
									<span class="separator-small">â€¢</span>
									<FormattedDate date={post.pubDate} />
								</div>
							</div>
						</a>
					))
				}
			</div>
		)}
	</div>
</Layout>

<style>
	.page-content {
		padding: var(--space-lg) var(--space-sm);
	}

	.page-title {
		text-align: center;
		margin-bottom: var(--space-lg);
		font-family: var(--font-display);
		font-size: 2.5rem;
		font-weight: 800;
	}

	.no-posts {
		text-align: center;
		color: var(--color-text-muted);
		font-size: 1.2rem;
	}

	.posts-grid {
		grid-template-columns: repeat(auto-fill, minmax(min(240px, 100%), 1fr));
		gap: var(--space-md);
	}

	.post-card {
		background: #FFFFFF;
		border-radius: 12px;
		border: 1px solid var(--color-border);
		overflow: hidden;
		transition: all 0.3s ease;
		text-decoration: none;
		display: flex;
		flex-direction: column;
		color: inherit;
	}

	.post-card:hover {
		box-shadow: var(--shadow-md);
		border-color: var(--color-primary);
	}

	.image-container {
		width: 100%;
		aspect-ratio: 16/9;
		overflow: hidden;
		background: var(--color-surface);
		border-bottom: 1px solid var(--color-border);
	}

	.post-card:hover .image-container {
		border-bottom-color: var(--color-primary);
	}

	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.post-content {
		padding: var(--space-md);
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.category-small {
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--color-primary);
		margin-bottom: 0.25rem;
		letter-spacing: 0.05em;
	}

	.title {
		font-family: var(--font-display);
		font-size: 1.25rem;
		font-weight: 700;
		line-height: 1.3;
		margin-bottom: var(--space-xs);
		color: var(--color-text-main);
		transition: color 0.2s ease;
	}

	.post-card:hover .title {
		color: var(--color-primary);
	}

	.meta-small {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.4rem;
		margin-top: auto;
		padding-top: var(--space-sm);
	}

	.author-small {
		font-weight: 700;
		color: var(--color-text-main);
	}

	.separator-small {
		color: var(--color-border);
	}

	@media (max-width: 600px) {
		.page-content {
			padding: var(--space-md) var(--space-sm);
		}

		.page-title {
			font-size: clamp(1.9rem, 9vw, 2.3rem);
			margin-bottom: var(--space-md);
		}

		.no-posts {
			font-size: 1rem;
		}

		.post-content {
			padding: var(--space-sm);
		}
	}
</style>
