---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Articles | MoneyJuan" description="All articles on saving, investing, and building wealth.">
	<div class="container page-content">
		<h1 class="page-title">All Articles</h1>
		
		<div class="grid posts-grid">
			{
				posts.map((post) => (
					<a href={`/blog/${post.id}/`} class="card post-card">
						<div class="image-container">
							{post.data.heroImage && <Image width={720} height={360} src={post.data.heroImage} alt="" />}
						</div>
						<div class="post-content">
							<div class="category-small">{post.data.category ? post.data.category.replace('-', ' ') : 'Article'}</div>
							<h2 class="title">{post.data.title}</h2>
							<div class="meta-small">
								<span class="author-small">By {post.data.author || 'MoneyJuan Team'}</span>
								<span class="separator-small">â€¢</span>
								<FormattedDate date={post.data.pubDate} />
							</div>
						</div>
					</a>
				))
			}
		</div>
	</div>
</Layout>

<style>
	.page-content {
		padding: var(--space-lg) var(--space-sm);
	}

	.page-title {
		text-align: center;
		margin-bottom: var(--space-lg);
		font-family: var(--font-display);
		font-size: 2.5rem;
		font-weight: 800;
	}

	.posts-grid {
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: var(--space-md);
	}

	.post-card {
		background: #FFFFFF;
		border-radius: 12px;
		border: 1px solid var(--color-border);
		overflow: hidden;
		transition: all 0.3s ease;
		text-decoration: none;
		display: flex;
		flex-direction: column;
		color: inherit;
	}

	.post-card:hover {
		transform: translateY(-3px);
		box-shadow: var(--shadow-md);
		border-color: var(--color-primary);
	}

	.image-container {
		width: 100%;
		aspect-ratio: 16/9;
		overflow: hidden;
		background: var(--color-surface);
		border-bottom: 1px solid var(--color-border);
	}

	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.post-card:hover .image-container img {
		transform: scale(1.05);
	}

	.post-content {
		padding: var(--space-md);
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.category-small {
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--color-primary);
		margin-bottom: 0.25rem;
		letter-spacing: 0.05em;
	}

	.title {
		font-family: var(--font-display);
		font-size: 1.25rem;
		font-weight: 700;
		line-height: 1.3;
		margin-bottom: var(--space-xs);
		color: var(--color-text-main);
		transition: color 0.2s ease;
	}

	.post-card:hover .title {
		color: var(--color-primary);
	}

	.meta-small {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		display: flex;
		align-items: center;
		gap: 0.4rem;
		margin-top: auto;
		padding-top: var(--space-sm);
	}

	.author-small {
		font-weight: 700;
		color: var(--color-text-main);
	}

	.separator-small {
		color: var(--color-border);
	}
</style>
