---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import { getAuthorByName } from '../data/authors';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, category, author, heroImage } = Astro.props;
const displayAuthor = author || 'MoneyJuan Team';
const authorProfile = getAuthorByName(displayAuthor);

const toTitleCase = (value: string) =>
	value
		.split('-')
		.map((part) => part.charAt(0).toUpperCase() + part.slice(1))
		.join(' ');

const pageUrl = Astro.url.href;
const canonicalSiteUrl = new URL('/', Astro.site).toString();
const authorUrl = authorProfile ? new URL(`/author/${authorProfile.slug}/`, Astro.site).toString() : null;
const authorSameAs = authorProfile
	? [authorProfile.links?.linkedin, authorProfile.links?.website].filter(
			(link): link is string => Boolean(link),
		)
	: [];
const categoryTitle = category ? toTitleCase(category) : undefined;
const articleImage = heroImage ? new URL(heroImage.src, Astro.site).toString() : undefined;

const blogPostingStructuredData = JSON.parse(
	JSON.stringify({
		'@context': 'https://schema.org',
		'@type': 'BlogPosting',
		mainEntityOfPage: {
			'@type': 'WebPage',
			'@id': pageUrl,
		},
		headline: title,
		description,
		url: pageUrl,
		datePublished: pubDate.toISOString(),
		dateModified: (updatedDate || pubDate).toISOString(),
		inLanguage: 'en-PH',
		articleSection: categoryTitle,
		keywords: categoryTitle ? [categoryTitle] : undefined,
		image: articleImage ? [articleImage] : undefined,
		author: authorProfile
			? {
					'@type': 'Person',
					'@id': `${authorUrl}#author`,
					name: displayAuthor,
					url: authorUrl,
					sameAs: authorSameAs.length > 0 ? authorSameAs : undefined,
				}
			: {
					'@type': 'Person',
					name: displayAuthor,
				},
		publisher: {
			'@type': 'Organization',
			name: SITE_TITLE,
			url: canonicalSiteUrl,
			logo: {
				'@type': 'ImageObject',
				url: new URL('/favicons/android-chrome-512x512.png', Astro.site).toString(),
			},
		},
	}),
);
---

<Layout title={title} description={description} structuredData={blogPostingStructuredData}>
	<article class="container blog-post">
		<div class="header-grid">
			<div class="header-meta">
				<div class="author-meta-group">
					{
						authorProfile?.image && (
							<a href={`/author/${authorProfile.slug}/`} class="author-avatar-link" aria-label={`View ${displayAuthor} profile`}>
								<img class="author-avatar" src={authorProfile.image} alt={displayAuthor} loading="eager" decoding="async" />
							</a>
						)
					}
					<div class="author-text-group">
						<div class="author-block">
							<span class="by-text">by</span>
							{
								authorProfile ? (
									<a href={`/author/${authorProfile.slug}/`} class="author-name author-link">{displayAuthor}</a>
								) : (
									<span class="author-name">{displayAuthor}</span>
								)
							}
						</div>
						<div class="date-block">
							<FormattedDate date={pubDate} />
							{updatedDate && <div class="updated">Updated <FormattedDate date={updatedDate} /></div>}
						</div>
					</div>
				</div>
				
				<div class="social-share">
					<button class="share-btn copy-link" aria-label="Copy Link" title="Copy Link">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
					</button>
					<a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="share-btn twitter" aria-label="Share on X" title="Share on X">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
					</a>
					<a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="share-btn facebook" aria-label="Share on Facebook" title="Share on Facebook">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036c-2.148 0-2.971.956-2.971 3.594v.476h3.425l-.448 3.667h-2.977v7.98H9.101z"/></svg>
					</a>
					<a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(title)}`} target="_blank" rel="noopener noreferrer" class="share-btn linkedin" aria-label="Share on LinkedIn" title="Share on LinkedIn">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
					</a>
				</div>
			</div>
			
			<div class="header-content">
				{category && <div class="category-label">{category.replace('-', ' ')}</div>}
				<h1 class="main-title">{title}</h1>
				{description && <p class="subtitle">{description}</p>}
			</div>
		</div>
		
		<div class="post-grid">
			<div class="prose">
				<slot />
			</div>

			<aside class="sidebar">
				<div class="toc-container">
					<h3 class="toc-title">Table of Contents</h3>
					<div class="progress-bar-container">
						<div class="progress-bar" id="reading-progress"></div>
					</div>
					<nav class="toc">
						<ul>
							{Astro.props.headings?.map((heading: any) => (
								<li class={`toc-item depth-${heading.depth}`}>
									<a href={`#${heading.slug}`}>{heading.text}</a>
								</li>
							))}
						</ul>
					</nav>
				</div>
			</aside>
		</div>
	</article>

	{Astro.props.relatedPosts?.length > 0 && (
		<section class="container related-section">
			<hr class="section-divider" />
			<h2 class="section-title">Related Articles</h2>
			<div class="grid posts-grid">
				{Astro.props.relatedPosts.map((post: any) => (
					<a href={`/blog/${post.id}/`} class="card post-card">
						<div class="image-container">
							{post.data.heroImage && <Image width={720} height={360} src={post.data.heroImage} alt="" />}
						</div>
						<div class="post-content">
							<div class="category-small">{post.data.category ? post.data.category.replace('-', ' ') : 'Article'}</div>
							<h3 class="title">{post.data.title}</h3>
							<div class="meta-small">
								<span class="author-small">By {post.data.author || 'MoneyJuan Team'}</span>
								<span class="separator-small">â€¢</span>
								<FormattedDate date={post.data.pubDate} />
							</div>
						</div>
					</a>
				))}
			</div>
		</section>
	)}
</Layout>

<style>
	.blog-post {
		padding-top: var(--space-md);
		padding-bottom: var(--space-lg);
	}

	/* Header Layout */
	.header-grid {
		display: grid;
		grid-template-columns: 250px 1fr;
		gap: var(--space-md);
		margin-bottom: var(--space-sm);
		padding-bottom: var(--space-sm);
		border-bottom: 1px solid var(--color-border);
	}

	.header-meta {
		padding-top: var(--space-xs);
		border-right: 1px solid var(--color-border);
		padding-right: var(--space-md);
	}

	.author-meta-group {
		display: grid;
		grid-template-columns: auto 1fr;
		align-items: center;
		column-gap: 0.65rem;
		margin-bottom: 0.35rem;
	}

	.author-text-group {
		min-width: 0;
	}

	.author-text-group:only-child {
		grid-column: 1 / -1;
	}

	.author-avatar-link {
		width: 48px;
		height: 48px;
		border-radius: 50%;
		overflow: hidden;
		border: 1px solid var(--color-border);
		display: inline-flex;
	}

	.author-avatar {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.author-block {
		font-family: var(--font-display);
		font-weight: 700;
		font-size: 1.1rem;
		line-height: 1.2;
		margin-bottom: 0.25rem;
		color: var(--color-text-main);
	}

	.by-text {
		font-weight: 400;
		color: var(--color-text-muted);
	}

	.by-text::after {
		content: ' ';
	}

	.author-name {
		color: var(--color-primary);
		line-height: 1.2;
	}

	.author-link:hover {
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.date-block {
		font-size: 0.9rem;
		color: var(--color-text-muted);
		font-family: var(--font-body);
		line-height: 1.35;
	}

	.updated {
		font-style: italic;
		font-size: 0.85rem;
		margin-top: 0.25rem;
	}

	/* Social Share */
	.social-share {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: var(--space-sm);
	}

	.share-btn {
		width: 36px;
		height: 36px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		border: 1px solid var(--color-border);
		background: transparent;
		color: var(--color-text-muted);
		cursor: pointer;
		transition: all 0.2s ease;
		text-decoration: none;
	}

	.share-btn:hover {
		color: var(--color-primary);
		border-color: var(--color-primary);
		background: var(--color-surface);
		transform: translateY(-2px);
	}

	.share-btn svg {
		width: 18px;
		height: 18px;
	}

	.header-content {
		padding-left: var(--space-sm);
	}

	.category-label {
		font-family: var(--font-display);
		font-weight: 800;
		text-transform: uppercase;
		color: var(--color-primary);
		font-size: 0.9rem;
		margin-bottom: var(--space-sm);
		letter-spacing: 0.05em;
	}

	.main-title {
		font-family: var(--font-display);
		font-size: var(--fs-h1);
		line-height: 1.1;
		font-weight: 800;
		margin-bottom: var(--space-xs);
		padding-bottom: 0.1em;
		letter-spacing: -0.02em;
		color: var(--color-text-main);
	}

	.subtitle {
		font-size: clamp(1rem, 2.1vw, 1.2rem);
		line-height: 1.45;
		color: var(--color-text-muted);
		max-width: 65ch;
		font-weight: 400;
	}


	/* Layout Grid */
	.post-grid {
		display: grid;
		grid-template-columns: 1fr 300px;
		gap: var(--space-lg);
		align-items: start;
	}

	.prose {
		width: 100%;
		max-width: 100%;
		color: var(--color-text-main);
		font-family: var(--font-reading);
		font-size: var(--fs-reading);
		line-height: var(--lh-reading);
	}

	/* Sidebar & TOC */
	.sidebar {
		position: sticky;
		top: 100px;
		align-self: start;
		max-height: calc(100vh - 120px);
	}

	.toc-container {
		background: var(--color-surface);
		padding: var(--space-md);
		border-radius: 12px;
		border-top-left-radius: 0;
		border-top-right-radius: 0;
		border: 1px solid var(--color-border);
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		height: calc(100vh - 120px);
		max-height: calc(100vh - 120px);
	}

	.progress-bar-container {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: var(--color-border);
	}

	.progress-bar {
		height: 100%;
		background: var(--color-primary);
		width: 0%;
		transition: width 0.1s ease;
	}

	.toc-title {
		font-family: var(--font-display);
		font-size: 1.1rem;
		font-weight: 700;
		margin-bottom: var(--space-sm);
		color: var(--color-text-main);
	}

	.toc ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.toc {
		flex: 1 1 auto;
		min-height: 0;
		overflow-y: auto;
		padding-right: 0.35rem;
		scrollbar-gutter: stable;
		-ms-overflow-style: none;
		scrollbar-width: none;
	}

	.toc::-webkit-scrollbar {
		width: 0;
		height: 0;
	}

	.toc-item {
		margin-bottom: 0.5rem;
	}

	.toc-item a {
		text-decoration: none;
		color: var(--color-text-muted);
		font-size: 0.9rem;
		transition: color 0.2s ease;
		display: block;
		line-height: 1.4;
	}

	.toc-item a:hover,
	.toc-item a.active {
		color: var(--color-primary);
		font-weight: 700;
	}

	.toc-item.depth-3 {
		padding-left: 1rem;
		font-size: 0.85rem;
	}

	/* Related Articles */
	.related-section {
		padding-bottom: var(--space-xl);
	}

	.section-divider {
		border: 0;
		border-top: 1px solid var(--color-border);
		margin: var(--space-lg) 0;
	}

	.section-title {
		font-family: var(--font-display);
		font-size: 2rem;
		font-weight: 800;
		color: var(--color-text-main);
		margin-bottom: var(--space-md);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border-left: 4px solid var(--color-primary);
		padding-left: var(--space-sm);
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--space-md);
	}

	.post-card {
		background: #FFFFFF;
		border-radius: 12px;
		border: 1px solid var(--color-border);
		overflow: hidden;
		transition: all 0.3s ease;
		text-decoration: none;
		display: flex;
		flex-direction: column;
		color: inherit;
	}

	.post-card:hover {
		box-shadow: var(--shadow-md);
		border-color: var(--color-primary);
	}

	.image-container {
		width: 100%;
		aspect-ratio: 16/9;
		overflow: hidden;
		background: var(--color-surface);
		border-bottom: 1px solid var(--color-border);
	}

	.post-card:hover .image-container {
		border-bottom-color: var(--color-primary);
	}

	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.post-content {
		padding: var(--space-md);
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.category-small {
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--color-primary);
		margin-bottom: 0.25rem;
		letter-spacing: 0.05em;
	}

	.title {
		font-family: var(--font-display);
		font-size: 1.25rem;
		font-weight: 700;
		line-height: 1.3;
		margin-bottom: var(--space-xs);
		color: var(--color-text-main);
		transition: color 0.2s ease;
	}

	.post-card:hover .title {
		color: var(--color-primary);
	}

	.meta-small {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.4rem;
		margin-top: auto;
		padding-top: var(--space-sm);
	}

	.author-small {
		font-weight: 700;
		color: var(--color-text-main);
	}

	.separator-small {
		color: var(--color-border);
	}

	/* Markdown Content Styles */
	.prose :global(h2) {
		font-family: var(--font-display);
		font-size: var(--fs-h2);
		line-height: 1.2;
		font-weight: 700;
		margin-top: var(--space-md);
		scroll-margin-top: 100px;
	}

	.prose :global(h3) {
		font-family: var(--font-display);
		font-size: var(--fs-h3);
		line-height: 1.3;
		font-weight: 600;
		margin-top: calc(var(--space-md) * 0.9);
		margin-bottom: calc(var(--space-sm) * 0.75);
		scroll-margin-top: 100px;
	}

	.prose :global(h4) {
		font-family: var(--font-display);
		font-size: 1.125rem;
		font-weight: 700;
		line-height: 1.3;
		margin-top: calc(var(--space-sm) * 1.1);
		margin-bottom: calc(var(--space-sm) * 0.55);
		scroll-margin-top: 100px;
	}

	.prose :global(p) {
		font-size: var(--fs-reading);
		margin-bottom: var(--space-sm);
		line-height: var(--lh-reading);
		max-width: 100%;
		font-weight: 400;
	}

	.prose :global(a) {
		color: var(--color-primary);
		text-decoration: underline;
		text-underline-offset: 4px;
	}

	.prose :global(ul), .prose :global(ol) {
		margin-bottom: var(--space-sm);
		padding-left: var(--space-md);
	}

	.prose :global(li) {
		font-size: var(--fs-reading);
		margin-bottom: var(--space-xs);
		line-height: var(--lh-reading);
		font-weight: 400;
	}

	.prose :global(blockquote) {
		border-left: 4px solid var(--color-primary);
		padding-left: var(--space-sm);
		margin: var(--space-md) 0;
		font-style: italic;
		color: var(--color-text-muted);
	}

	.prose :global(pre),
	.prose :global(code) {
		max-width: 100%;
		overflow-x: auto;
	}

	.prose :global(table) {
		display: block;
		max-width: 100%;
		overflow-x: auto;
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.post-grid {
			grid-template-columns: 1fr;
		}

		.sidebar {
			display: none; /* Hide TOC on mobile/tablet for now, or move to top */
		}
		
		.prose {
			width: 100%;
		}
	}

	@media (max-width: 768px) {
		.header-grid {
			grid-template-columns: 1fr;
			gap: var(--space-xs);
		}

		.header-meta {
			order: 2;
			border-right: none;
			border-bottom: none;
			border-top: 1px solid var(--color-border);
			margin-top: 0;
			padding-top: var(--space-xs);
			padding-right: 0;
			padding-bottom: 0;
			display: grid;
			grid-template-columns: 1fr auto;
			grid-template-areas: 'meta share';
			column-gap: 0.75rem;
			row-gap: 0.25rem;
			align-items: start;
		}

		.author-meta-group {
			grid-area: meta;
			grid-template-columns: 42px 1fr;
			column-gap: 0.55rem;
			margin-bottom: 0;
		}

		.author-avatar-link {
			width: 42px;
			height: 42px;
		}

		.social-share {
			grid-area: share;
			margin-top: 0;
			justify-self: end;
			align-self: start;
			gap: 0.35rem;
		}

		.share-btn {
			width: 32px;
			height: 32px;
		}

		.share-btn svg {
			width: 16px;
			height: 16px;
		}

		.header-content {
			order: 1;
			padding-left: 0;
		}

		.main-title {
			font-size: 2.1rem;
		}

		.subtitle {
			margin: 0;
		}
	}

	@media (max-width: 640px) {
		.blog-post {
			padding-top: var(--space-md);
		}

		.header-meta {
			column-gap: 0.5rem;
		}

		.main-title {
			font-size: clamp(1.7rem, 9vw, 2.1rem);
		}

		.section-title {
			font-size: 1.4rem;
		}
	}

	@media (max-width: 900px) {
		.posts-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.posts-grid {
			grid-template-columns: 1fr;
