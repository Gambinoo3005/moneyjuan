<style>
	footer {
		background: #111827; /* Dark footer for contrast */
		color: #F3F4F6;
		padding: var(--space-lg) 0 var(--space-lg);
		margin-top: auto;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1.5fr;
		gap: var(--space-lg);
		margin-bottom: var(--space-xl);
	}

	.brand-logo {
		font-family: var(--font-display);
		font-size: 1.8rem;
		font-weight: 800;
		margin-bottom: var(--space-sm);
		color: #FFFFFF;
	}

	.text-primary {
		color: var(--color-primary);
	}

	.brand-tagline {
		color: #9CA3AF;
		font-size: 0.95rem;
		line-height: 1.6;
		margin-bottom: var(--space-md);
		max-width: 30ch;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-icon {
		color: #9CA3AF;
		transition: all 0.2s ease;
	}

	.social-icon:hover {
		color: var(--color-primary);
		transform: translateY(-2px);
	}

	.footer-heading {
		font-family: var(--font-display);
		font-size: 1.1rem;
		font-weight: 700;
		color: #FFFFFF;
		margin-bottom: var(--space-md);
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-links a {
		color: #9CA3AF;
		text-decoration: none;
		transition: color 0.2s ease;
		font-size: 0.95rem;
	}

	.footer-links a:hover {
		color: var(--color-primary);
		padding-left: 4px;
	}

	.footer-text {
		color: #9CA3AF;
		font-size: 0.95rem;
		margin-bottom: var(--space-sm);
	}

	.newsletter-form {
		display: flex;
		gap: 0.5rem;
	}

	.newsletter-input {
		flex: 1;
		padding: 0.75rem;
		border-radius: 6px;
		border: 1px solid #374151;
		background: #1F2937;
		color: #FFFFFF;
		font-family: var(--font-body);
	}

	.newsletter-input:focus {
		outline: none;
		border-color: var(--color-primary);
	}

	.newsletter-btn {
		background: var(--color-primary);
		color: #FFFFFF;
		border: none;
		border-radius: 6px;
		padding: 0 1rem;
		cursor: pointer;
		transition: background 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.newsletter-btn:hover {
		background: var(--color-secondary);
	}

	.footer-bottom {
		border-top: 1px solid #374151;
		padding-top: var(--space-md);
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: var(--space-md);
	}

	.copyright {
		color: #6B7280;
		font-size: 0.9rem;
	}

	.legal-links {
		display: flex;
		gap: var(--space-md);
	}

	.legal-links a {
		color: #6B7280;
		font-size: 0.9rem;
		transition: color 0.2s ease;
	}

	.legal-links a:hover {
		color: #FFFFFF;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.footer-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.footer-grid {
			grid-template-columns: 1fr;
			gap: var(--space-md);
		}

		.footer-bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
