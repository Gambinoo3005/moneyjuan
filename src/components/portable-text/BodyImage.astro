---
import SanityImage from '../SanityImage.astro';

const { node } = Astro.props as { node: { alt?: string } };
const alt = node.alt ?? '';
---

<figure class="portable-image">
	<SanityImage source={node} alt={alt} width={1400} />
	{alt && <figcaption>{alt}</figcaption>}
</figure>

<style>
	.portable-image {
		margin: var(--space-md) 0;
	}

	.portable-image :global(img) {
		width: 100%;
		height: auto;
		border-radius: 12px;
		border: 1px solid var(--color-border);
	}

	.portable-image figcaption {
		margin-top: 0.4rem;
		font-size: 0.85rem;
		color: var(--color-text-muted);
		text-align: center;
	}
</style>
